<OpenerScreen>:

    #open_file: open_file

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.9
            Button:
                text: 'Last'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'draw'
            Button:
                text: 'Find'
                on_press:
                    root.show_file_loader()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Label:
                text: 'Last open name from config' # !!!
            Button:
                text: '<------'
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'welcome'
    